<!-- app/views/patients/_form.html.erb -->
<%= form_with model: patient, local: true do |f| %>
  <%= render 'shared/form_errors', object: patient %>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :next_appointment, "Next Appointment (Optional)" %>
      <%= f.date_field :next_appointment, value: @patient.next_appointment, class: "form-control" %>
    </div>
  </div>

  <div>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
